extends layout

block content
    form(id="newPost", action='/post', method='POST', class="form-horizontal")
        div(class="form-group")
            label(for='title', class="col-sm-1 control-label") Title
            div(class="col-sm-8")
                input(type='text', id='title', name='title', placeholder='New Post', class="form-control")
        div(class="form-group")
            label(for='author', class="col-sm-1 control-label") Author
            div(class="col-sm-8")
                input(type='text', id='author', name='author' placeholder='Author', class="form-control")
        div(class="form-group")
            label(for='content', class="col-sm-1 control-label") Content
            div(class="col-sm-8")
                textarea(id='content', name='content', rows=10, cols=50 placeholder='Enter your post content', class="form-control")
        div(class="form-group")
            div(class="col-sm-offset-1 col-sm-8")
                input(type='submit', class="btn btn-default")